<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingBottom="0dp"
    android:paddingTop="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_marginBottom="5dp"
        android:elevation="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/note_wrapper"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:id="@+id/note_wrapper_inner"
                android:layout_height="wrap_content">




            <View
                android:layout_width="20dp"
                android:id="@+id/note_color"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:visibility="gone"
                android:background="#c76c76"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Sample Title"
                        android:textSize="19sp"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="#EEEEEE"
                        android:gravity="center_vertical"
                        android:id="@+id/note_title"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_height="match_parent">


                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/gold_button"
                                android:paddingRight="3dp"
                                android:paddingLeft="3dp"
                                android:textSize="14sp"
                                android:text="R0"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:textColor="#F5f5f5"
                                android:id="@+id/note_rating"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:paddingTop="5dp"
                            android:id="@+id/edit_note"
                            android:src="@drawable/edit"
                            android:layout_marginRight="5dp"
                            android:layout_height="30dp"
                            android:background="@drawable/green_button_selector"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:padding="3dp"
                            android:id="@+id/delete_note"
                            android:src="@drawable/delete_white"
                            android:layout_height="30dp"
                            android:background="@drawable/red_button_selector"
                            android:layout_gravity="center"/>


                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:text="Sample Title"
                        android:textSize="12sp"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:id="@+id/time"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:text="This is sample note"
                        android:textSize="15sp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:layout_gravity="center"
                        android:textColor="#E0E0E0"
                        android:lineSpacingExtra="2dp"
                        android:id="@+id/notes_content"/>


                </LinearLayout>

            </LinearLayout>


            </LinearLayout>




        </LinearLayout>

    </LinearLayout>



</LinearLayout>